{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "types": [
      "reflect-metadata",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "tests"
  ]
}
